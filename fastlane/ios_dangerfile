require "danger"
build_url = ENV['BUILD_URL']
build_id = ENV['BUILD_ID']

warn("PR is classed as Work in Progress") if github.pr_title.include? "[WIP]"
message << github.pr_title
message << github.pr_body
message << github.pr_author
message << build_id
message << build_url
message << "fastlane/test_output/report.html"
message << "fastlane/test_output/report.junit"
message = "\n---\n\n"

warn("Big PR") if git.lines_of_code > 500
message = "\n---\n\n"

message << " Test results output should posted to pull request in repository. "
markdown << message
